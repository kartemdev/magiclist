{
  "compilerOptions": {
    "outDir": "./build",
    "target": "ES2022",
    "module": "ES2022",
    "jsx": "react", 
    "noImplicitAny": true,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src", "declaration.d.ts", "webpack"],
  "exclude": ["node_modules", "build"]
}
